<% layout("layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <br>
        <h3>Create a new listing</h3>
        <br>

        <form action="/listings" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" placeholder="enter title" id="title" class="form-control" required>
                <div class="valid-feedback"> Title looks good! </div>
                <div class="invalid-feedback"> Please provide a valid title. </div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" placeholder="enter description" id="description" class="form-control" required></textarea>
                <div class="invalid-feedback"> Please provide a short description. </div>
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <input type="text" name="listing[image][url]" placeholder="enter image URL/LINK" id="image" class="form-control">
            </div>

            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" min="0" name="listing[price]" placeholder="enter price" id="price" class="form-control" required>
                    <div class="invalid-feedback"> Please provide a valid price. </div>
                </div>

                <div class="mb-3 col-md-8">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" placeholder="enter location" id="location" class="form-control" required>
                    <div class="invalid-feedback"> Please provide a valid location. </div>
                </div>
            </div>

            <div class="mb-3">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" placeholder="enter country" id="country" class="form-control" required>
                <div class="invalid-feedback"> Please provide a valid country. </div>
            </div>

            <br>
            <button class="btn btn-dark add-btn">Add</button>
            <br><br>
        </form>
    </div>
    
</div>